<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.GameController"
            prefWidth="1100" prefHeight="650">

    <!-- ========================= -->
    <!-- ZONA SUPERIOR -->
    <!-- ========================= -->
    <top>
        <VBox spacing="10">

            <!-- FILA DE CONTROLES -->
            <HBox spacing="10" alignment="center_left">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <children>
                    <Button text="Iniciar juego"
                            fx:id="btnIniciar"
                            onAction="#iniciarJuego"/>

                    <Label text="Selecciona barco:"
                           style="-fx-font-size: 16px;"/>

                    <Button fx:id="btnBarco4" text="Barco 4"/>
                    <Button fx:id="btnBarco3" text="Barco 3"/>
                    <Button fx:id="btnBarco2" text="Barco 2"/>
                    <Button fx:id="btnBarco1" text="Barco 1"/>

                    <ToggleButton fx:id="toggleOrientacion"
                                  text="Horizontal"
                                  selected="true"/>

                    <Label fx:id="lblTurno"
                           text="Coloca tus barcos"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </children>
            </HBox>
        </VBox>
    </top>

    <!-- ========================= -->
    <!-- ZONA CENTRAL -->
    <!-- ========================= -->
    <center>
        <HBox spacing="60" alignment="center">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <children>

                <!-- TABLERO JUGADOR -->
                <VBox spacing="10" alignment="center">
                    <children>

                        <Label text="Tu tablero"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <StackPane fx:id="contenedorJugador">

                            <!-- CAPA CELDAS -->
                            <GridPane fx:id="gridJugador"
                                      hgap="0" vgap="0"
                                      gridLinesVisible="false"/>

                            <!-- CAPA BARCOS (IMÃGENES GRANDES) -->
                            <Pane fx:id="capaBarcosJugador"
                                  pickOnBounds="false"/>
                        </StackPane>
                    </children>
                </VBox>

                <!-- TABLERO ENEMIGO -->
                <VBox spacing="10" alignment="center">
                    <children>

                        <Label text="Tablero enemigo"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                        <GridPane fx:id="gridEnemigo"
                                  hgap="0" vgap="0"
                                  gridLinesVisible="false"/>
                    </children>
                </VBox>

            </children>
        </HBox>
    </center>

    <!-- ========================= -->
    <!-- ZONA INFERIOR -->
    <!-- ========================= -->
    <bottom>
        <Label text="Batalla Naval"
               style="-fx-font-size: 14px; -fx-padding: 10px;"
               BorderPane.alignment="center"/>
    </bottom>

</BorderPane>

