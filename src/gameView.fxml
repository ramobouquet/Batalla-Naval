<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.GameController"
            prefWidth="1100" prefHeight="650">

    <!-- ZONA SUPERIOR: InformaciÃ³n general -->
    <top>
        <VBox spacing="10">
            <children>

                <!-- PRIMERA FILA: BOTONES DE BARCOS -->
                <HBox spacing="10" alignment="center_left">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <children>
                        <Label text="Selecciona el barco:" style="-fx-font-size: 16px;"/>

                        <Button fx:id="btnBarco4" text="Barco 4" />
                        <Button fx:id="btnBarco3" text="Barco 3" />
                        <Button fx:id="btnBarco2" text="Barco 2" />
                        <Button fx:id="btnBarco1" text="Barco 1" />

                        <ToggleButton fx:id="toggleOrientacion"
                                      text="Horizontal"
                                      selected="true" />
                    </children>
                </HBox>

                <!-- SEGUNDA FILA: INFO DEL JUGADOR -->
                <HBox spacing="20" alignment="center_left">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <children>
                        <Label fx:id="labelJugador"
                               text="Jugador: ---"
                               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                        <Label fx:id="labelBarcosHundidos"
                               text="Barcos hundidos: 0"
                               style="-fx-font-size: 18px;" />

                        <Button fx:id="btnRevelar"
                                text="Revelar tablero enemigo"
                                style="-fx-font-size: 14px;" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </top>



    <!-- ZONA CENTRAL: Tableros -->
    <center>
        <HBox spacing="50" alignment="center">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>

                <!-- TABLERO DEL JUGADOR -->
                <VBox spacing="10" alignment="center">
                    <children>
                        <Label text="Tu tablero"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                        <GridPane fx:id="gridJugador"
                                  hgap="2" vgap="2"
                                  gridLinesVisible="false">
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10"/>
                            </padding>
                        </GridPane>
                    </children>
                </VBox>

                <!-- TABLERO DEL ENEMIGO -->
                <VBox spacing="10" alignment="center">
                    <children>
                        <Label text="Tablero enemigo"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                        <GridPane fx:id="gridEnemigo"
                                  hgap="2" vgap="2"
                                  gridLinesVisible="false">
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10"/>
                            </padding>
                        </GridPane>
                    </children>
                </VBox>

            </children>
        </HBox>
    </center>

    <!-- ZONA INFERIOR: Mensajes -->
    <bottom>
        <Label fx:id="labelMensaje"
               text="Bienvenido a Batalla Naval"
               style="-fx-font-size: 16px; -fx-padding: 12px;"
               BorderPane.alignment="center"/>
    </bottom>

</BorderPane>
